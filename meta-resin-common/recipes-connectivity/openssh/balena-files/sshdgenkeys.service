[Unit]
Description=OpenSSH Key Generation
RequiresMountsFor=/var /run
Requires=resin-state.service
After=resin-state.service

[Service]
ExecStart=@LIBEXECDIR@/sshd_check_keys
Type=oneshot
RemainAfterExit=yes

[Install]                                                                                                                                                                                                                                                                                                                                                                                
WantedBy=multi-user.target
